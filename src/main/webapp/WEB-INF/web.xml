<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5s.xsd"
         version="2.5">


<display-name>Archetype Created Web Application</display-name>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>

    <jsp-config>
        <!--自定义标签-->
        <taglib>
            <taglib-uri>http://com.dhcc.ywp/cedotaglib</taglib-uri>
            <taglib-location>/WEB-INF/tags/cedocodetl.tld</taglib-location>
        </taglib>
    </jsp-config>

    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>

    <!-- 激活对应profile -->
    <context-param>
        <param-name>spring.profiles.active</param-name>
        <param-value>dev</param-value>
    </context-param>

    <!-- spring-mvn -->
    <servlet>
        <servlet-name>spDispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>spDispatcher</servlet-name>
        <url-pattern>/spmvc/*</url-pattern>
    </servlet-mapping>
</web-app>
